root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[Makefile]
indent_style = tab

[*.{yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
